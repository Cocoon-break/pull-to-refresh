<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">
    <LinearLayout 
        android:id="@+id/ll_head"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:orientation="horizontal"
        android:background="@drawable/top_bg_middle">
        <View 
            android:layout_weight="1"
           android:layout_width="10dp"
           android:layout_height="match_parent" 
            />
        <ImageView 
            android:layout_weight="2.7"
            android:id="@+id/tag_img"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/bottom_tagstar_commen"
	        android:layout_gravity="center_vertical"/>
        <View 
            android:layout_weight="1"
           android:layout_width="10dp"
           android:layout_height="match_parent" 
            />
        <TextView 
            android:layout_weight="5.4"
            android:id="@+id/tag_tv"
	        android:layout_width="wrap_content"
	        android:layout_height="60dip"
	        android:text="找签客"
	        android:textSize="16sp"
	        android:textColor="@color/white"
	        android:gravity="center_vertical"
	        android:layout_gravity="center_vertical"/>
        <View 
           android:layout_weight="1.7"
           android:layout_width="15dp"
           android:layout_height="match_parent" 
            />
        <RelativeLayout
            android:layout_weight="16"
	        android:id="@+id/rl_layout2"
	        android:layout_width="200dip"
	        android:layout_height="40.0dip"	        
	        android:gravity="center_vertical"
	        android:layout_gravity="center_vertical">
	        <EditText 
	            android:id="@+id/search_text"
	            android:layout_width="fill_parent"
	            android:layout_height="30.0dip"
	            android:layout_marginLeft="5.0dip"
	            android:layout_marginRight="5.0dip"
	            android:focusable="false"
	            android:layout_centerVertical="true"/>
	        <ImageButton
	            android:id="@+id/search_pic"
	            android:layout_width="20.0dip"
	            android:layout_height="20.0dip"
	            android:layout_marginLeft="14.0dip"
	            android:layout_marginTop="10.0dip"
	            android:background="@drawable/search_picture_right" />
	    </RelativeLayout>
	    <View 
	        android:layout_weight="1.7"
           android:layout_width="10dp"
           android:layout_height="match_parent" 
            />
	    <ImageView
	        android:layout_weight="2.2" 
	        android:id="@+id/tag_img_menu"
	        android:layout_width="30dip"
	        android:layout_height="30dip"
	        android:src="@drawable/top_btn_right"
	        android:layout_gravity="center_vertical"/>
	    <View 
	        android:layout_width="5dp"
	        android:layout_height="wrap_content"
	        />
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/ll_bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="#10808080">
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
	        <View 
                android:layout_width="match_parent"
                android:layout_height="4dp"
                />
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/tag_yes"/>
            <View 
                android:layout_width="match_parent"
                android:layout_height="4dp"
                />
        </LinearLayout>
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <View 
                android:layout_width="match_parent"
                android:layout_height="4dp"
                />
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/mess_nol"/>
            <View 
                android:layout_width="match_parent"
                android:layout_height="4dp"
                />
        </LinearLayout>
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <View 
                android:layout_width="match_parent"
                android:layout_height="4dp"
                />
            <ImageView 
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/me_nol"/>
            <View 
                android:layout_width="match_parent"
                android:layout_height="4dp"
                />
        </LinearLayout>
    </LinearLayout>  
   <com.tute.pulltorefresh.activity.MyListView
       android:background="@color/white"
        android:id="@+id/pull_refresh_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="#00000000"
        android:divider="#ffffff"
        android:dividerHeight="4dp"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:smoothScrollbar="true"
        android:layout_below="@+id/ll_head"
        android:layout_above="@+id/ll_bottom"
        />
    
</RelativeLayout>
